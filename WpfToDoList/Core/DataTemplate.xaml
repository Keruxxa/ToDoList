<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:view="clr-namespace:WpfToDoList.View"
                    xmlns:vms="clr-namespace:WpfToDoList.ViewModel">
    
    <DataTemplate DataType="{x:Type vms:TasksViewModel}">
        <view:Tasks/>
    </DataTemplate>

    <DataTemplate DataType="{x:Type vms:ImportantViewModel}">
        <view:Important/>
    </DataTemplate>

    <DataTemplate DataType="{x:Type vms:NotesViewModel}">
        <view:NotesView/>
    </DataTemplate>

</ResourceDictionary>